 
#!/bin/bash
oldarchive=`ls -1 /mnt/mcro/backup/backup/LinuxServers/dns/backup_*`
#oldarchive=$(ls -la /backup/)
nameback="date +%Y.%m.%d_%H_%M"
tar -cvpzf /mnt/mcro/backup/backup/LinuxServers/dns/backup_`$nameback`.tgz $nobackup /mnt/mcro/rsync/linuxservers/dns
rm -r $oldarchive

oldarchives=`ls -1 /mnt/mcro/backup/backup/LinuxServers/doushd/backup_*`
tar -cvpzf /mnt/mcro/backup/backup/LinuxServers/doushd/backup_`$nameback`.tgz $nobackup /mnt/mcro/rsync/linuxservers/doushd
rm -r $oldarchives
exit
